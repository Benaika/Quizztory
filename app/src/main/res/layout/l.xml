<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context=".levels.EasyScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/easy"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/brown_orange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_totalQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Questions: "
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/brown_orange"/>

                <TextView
                    android:id="@+id/txt_numberOfQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/brown_orange"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_questions"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <Button
                android:id="@+id/txt_optionA"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Option A"/>

            <Button
                android:id="@+id/txt_optionB"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Option B" />

            <Button
                android:id="@+id/txt_optionC"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Option C" />

            <Button
                android:id="@+id/txt_optionD"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Option D" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="@string/btnSubmit"
                android:layout_marginTop="20dp"
                android:textColor="@color/brown_orange"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>